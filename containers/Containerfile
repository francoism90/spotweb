FROM docker.io/dunglas/frankenphp:latest AS builder

ARG USER=docker

ENV SERVER_ROOT=/app

WORKDIR /app

RUN apt-get update && apt-get upgrade -y \
    && apt-get install -y --no-install-recommends git zip unzip

RUN mv "${PHP_INI_DIR}/php.ini-production" "${PHP_INI_DIR}/php.ini"

RUN install-php-extensions \
	pdo_mysql \
    gettext \
	gd \
	intl \
	zip \
	opcache

RUN \
    useradd ${USER}; \
    setcap CAP_NET_BIND_SERVICE=+eip /usr/local/bin/frankenphp; \
    chown -R ${USER}:${USER} /config/caddy /data/caddy

FROM builder as stage

WORKDIR /app

RUN rm -rf /app/*

RUN git clone --depth 1 -b develop https://github.com/spotweb/spotweb.git /app

FROM builder as production

WORKDIR /app

COPY --from=stage /app /app

COPY containers/runtimes/dbsettings.inc.php /app/dbsettings.inc.php

RUN chown -R docker:docker /app

USER docker
